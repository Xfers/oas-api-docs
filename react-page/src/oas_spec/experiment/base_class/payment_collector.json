{
  "schemas": {
    "RequestBody": {
      "properties": {
        "settings": {},
        "destination_account_id": {
          "description": "You can get from XXXX",
          "type": "string",
          "example": "account_3091fa1f6bfddff48148fd32813a3a5b"
        },
        "reference_id": {
          "description": "Your order's reference id",
          "type": "string",
          "example": "ORDER_0001"
        }
      },
      "required": [
        "destination_account_id",
        "reference_id",
        "settings"
      ]
    },
    "BaseObject": {
      "properties": {
        "id": {
          "type": "string",
          "example": "va_7abf6bb130d44c02862982ff6022875d"
        },
        "type": {
          "type": "string"
        },
        "status": {
          "type": "string",
          "example": "active",
          "enum": [
            "active",
            "expired",
            "disabled"
          ]
        },
        "reference_id": {
          "type": "string",
          "example": "CUSTOMER_001"
        },
        "payment_details": {
          "type": "object"
        }
      }
    },
    "PaymentCollectorPayment": {
      "allOf": [
        {
          "$ref": "#/base_class/payment/schemas/BaseObject"
        },
        {
          "properties": {
            "payment_method": {
              "type": "string",
              "example": "payment_collector"
            },
            "payment_collector": {
              "type": "object"
            }
          }
        }
      ]
    },
    "FixedVirtualAccount": {
      "allOf": [
        {
          "$ref": "#/base_class/payment_collector/schemas/BaseObject"
        },
        {
          "properties": {
            "type": {
              "example": "fixed_virtual_account"
            },
            "bank_code": {
              "type": "string",
              "example": "BSS"
            },
            "display_name": {
              "type": "string",
              "example": "My Shop 1"
            },
            "account_no": {
              "type": "string",
              "example": "202000120472913"
            }
          }
        }
      ]
    }
  }
}