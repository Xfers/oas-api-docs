{
  "/v3/direct_payment/bank_transfer": {
    "post": {
      "tags": [
        "Bank Transfer"
      ],
      "summary": "Bank Transfer",
      "description": "Transfer money to the account, job done.",
      "security": [
        {
          "X-XFERS-APP-API-KEY": []
        }
      ],
      "requestBody": {
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "properties": {
                "amount": {
                  "description": "Amount properties",
                  "type": "object",
                  "properties": {
                    "value": {
                      "description:": "Amount value",
                      "type": "float",
                      "example": 10000.00
                    },
                    "currency": {
                      "description:": "Amount currency",
                      "type": "string",
                      "example": "IDR"
                    }
                  }
                },
                "destination_account_id": {
                  "description": "You can get from XXXX",
                  "type": "string",
                  "example": "account_3091fa1f6bfddff48148fd32813a3a5b"
                },
                "reference_id": {
                  "description": "Your order's reference id",
                  "type": "string",
                  "example": "ORDER_0001"
                },
                "expiration_time": {
                  "description": "Expiration time (ISO8601 format). maximum: 3 days after the request creation",
                  "type": "string",
                  "default": "{1 day after the request creation}",
                  "example": "2020-04-30T19:02:57+08:00"
                },
                "settings": {
                  "description": "Data for specific payment method",
                  "type": "object",
                  "properties": {
                    "bank_code": {
                      "description": "Bank code",
                      "type": "string",
                      "enum": [
                        "BSS",
                        "BRI",
                        "BNI"
                      ],
                      "example": "BSS"
                    },
                    "identifer_type": {
                      "description": "Identifier type",
                      "type": "string",
                      "enum": [
                        "non_fixed_va",
                        "unique_amount"
                      ]
                    }
                  }
                },
                "description": {
                  "description": "Order description",
                  "type": "string",
                  "example": "This is the first order"
                },
                "merchant_metadata": {
                  "description": "You can easily associate the payment to your system by this field. Total characters should be < 100",
                  "type": "object"
                }
              },
              "required": [
                "amount",
                "destination_account_id",
                "reference_id",
                "settings"
              ]
            }
          }
        }
      },
      "responses": {
        "200": {
          "description": "Success",
          "content": {
            "application/json": {
              "examples": {
                "non_fixed_va": {
                  "summary": "identifier_type = non_fixed_va",
                  "value": {
                    "transfer_info": {
                      "bank_code": "BSS",
                      "identifier_type": "non_fixed_va",
                      "account_holder_name": "Xfers Pte Ltd.",
                      "account_no": "202000120472913",
                      "amount": 10000.00
                    },
                    "id": "contract_7abf6bb130d44c02862982ff6022875d",
                    "object": "BankTransferContract",
                    "status": "processing",
                    "amount": 10000.00,
                    "currency": "idr",
                    "description": "This is the first order",
                    "merchant_metadata": {},
                    "expiration_time": "2020-04-30T19:02:57+08:00",
                    "settings": {
                      "bank_code": "BSS",
                      "identifier_type": "non_fixed_va"
                    }
                  }
                },
                "unique_amount": {
                  "summary": "identifier_type = unique_amount",
                  "value": {
                    "transfer_info": {
                      "bank_code": "BSS",
                      "identifier_type": "unique_amount",
                      "account_holder_name": "Xfers Pte Ltd.",
                      "account_no": "202000120472913",
                      "amount": 10921.12
                    },
                    "id": "contract_7abf6bb130d44c02862982ff6022875d",
                    "object": "BankTransferContract",
                    "status": "processing",
                    "amount": 10000.00,
                    "currency": "idr",
                    "description": "This is the first order",
                    "merchant_metadata": {},
                    "expiration_time": "2020-04-30T19:02:57+08:00",
                    "settings": {
                      "bank_code": "BSS",
                      "identifier_type": "unique_amount"
                    }
                  }
                }
              }
            }
          }
        },
        "4XX": {
          "$ref": "#/components/responses/v3Error:4XX"
        }
      },
      "callbacks": {
        "payment_received": {
          "$settings.direct_payment.payment_recieved_callback_url": {
            "post": {
              "summary": "Callback when received payment",
              "requestBody": {
                "required": true,
                "content": {
                  "application/json": {
                    "examples": {
                      "non_fixed_va": {
                        "summary": "identifier_type = non_fixed_va",
                        "value": {
                          "transfer_info": {
                            "bank_code": "BSS",
                            "identifier_type": "non_fixed_va",
                            "account_holder_name": "Xfers Pte Ltd.",
                            "account_no": "202000120472913",
                            "amount": 10000.00
                          },
                          "id": "contract_7abf6bb130d44c02862982ff6022875d",
                          "object": "BankTransferContract",
                          "status": "completed",
                          "amount": 10000.00,
                          "currency": "idr",
                          "description": "This is the first order",
                          "merchant_metadata": {},
                          "expiration_time": "2020-04-30T19:02:57+08:00",
                          "settings": {
                            "bank_code": "BSS",
                            "identifier_type": "non_fixed_va"
                          }
                        }
                      },
                      "unique_amount": {
                        "summary": "identifier_type = unique_amount",
                        "value": {
                          "transfer_info": {
                            "bank_code": "BSS",
                            "identifier_type": "unique_amount",
                            "account_holder_name": "Xfers Pte Ltd.",
                            "account_no": "202000120472913",
                            "amount": 10921.12
                          },
                          "id": "contract_7abf6bb130d44c02862982ff6022875d",
                          "object": "BankTransferContract",
                          "status": "completed",
                          "amount": 10000.00,
                          "currency": "idr",
                          "description": "This is the first order",
                          "merchant_metadata": {},
                          "expiration_time": "2020-04-30T19:02:57+08:00",
                          "settings": {
                            "bank_code": "BSS",
                            "identifier_type": "unique_amount"
                          }
                        }
                      }
                    }
                  }
                }
              },
              "responses": {
                "200": {
                  "description": "Your server returns this code if it accepts the callback"
                }
              }
            }
          }
        }
      }
    }
  }
}