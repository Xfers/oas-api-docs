{
  "TODO:": "Pangination",
  "/v3/direct_payment/payment_history": {
    "get": {
      "tags": [
        "Direct Payment Queries"
      ],
      "summary": "Retrieve Direct Payment",
      "description": "@irfan",
      "security": [
        {
          "X-XFERS-APP-API-KEY": []
        }
      ],
      "comment": " Either reference_id + payment_method / our id",
      "parameters": [
        {
          "name": "reference_id",
          "in": "query",
          "description": "Your order's reference id",
          "required": true,
          "schema": {
            "type": "string",
            "example": "ORDER_0001"
          }
        },
        {
          "name": "payment_method",
          "in": "query",
          "description": "Payment method",
          "required": true,
          "schema": {
            "type": "string",
            "example": "virtual_account_bank_transfer"
          }
        }
      ],
      "responses": {
        "200": {
          "description": "Success",
          "content": {
            "application/json": {
              "example": {
                "id": "contract_7abf6bb130d44c02862982ff6022875d",
                "payment_method": "virtual_account_bank_transfer",
                "reference_id": "ORDER_001",
                "status": "completed",
                "amount": {
                  "value": 10000,
                  "currency": "IDR"
                },
                "expiration_time": "2020-04-30T19:02:57+08:00",
                "description": "This is the first order",
                "merchant_metadata": {},
                "transfer_info": {
                  "bank_code": "BSS",
                  "account_holder_name": "Xfers Pte Ltd.",
                  "account_no": "202000120472913",
                  "amount": 10000
                }
              }
            }
          }
        }
      }
    }
  }
}