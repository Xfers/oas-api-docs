{
  "/v3/payment_gateway/payments/{id}": {
    "get": {
      "tags": [
        "Payment Queries"
      ],
      "summary": "Retrieve Payment",
      "description": "Get the status of your payment transaction by key in the payment ID from Xfers.",
      "security": [
        {
          "X-XFERS-APP-API-KEY": []
        }
      ],
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "description": "Transaction id in Xfers",
          "required": true,
          "schema": {
            "type": "string",
            "example": "contract_7abf6bb130d44c02862982ff6022875d"
          }
        }
      ],
      "responses": {
        "200": {
          "description": "Success",
          "content": {
            "application/json": {
              "schema": {
                "allOf": [
                  {
                    "$ref": "#/base_class/payment/schemas/BaseObject"
                  }
                ]
              },
              "example": {
                "id": "contract_73bf83beb9d145ada2c2694a06693b75",
                "status": "completed",
                "reference_id": "2020-06-11_13:00",
                "amount": "60189.0",
                "currency": "idr",
                "expiration_time": "2020-06-12T13:00:54+07:00",
                "description": "This is test order",
                "payment_method": {
                  "type": "unique_amount_bank_transfer",
                  "destination_account_id": "account_7c2b4df6270c4ba487f3786fec398a20",
                  "bank_type": "BRI",
                  "account_holder_name": "INKLUSI KEUANGAN NUSANTARA",
                  "account_no": "000501003330303",
                  "unique_amount": 60189
                }
              }
            }
          }
        }
      }
    },
    "put": {
      "tags": [
        "Modify Payments"
      ],
      "summary": "Action list",
      "description": "List of actions to modify a given payment ID:\r\n1.  **cancel** : Cancel a payment when it is still in pending state. Status will be changed to 'cancelled'. (Unique Amount only)\r\n2.  **receive_payment** : Simulate Xfers receiving payment from the customer for a given contract id. Status will be changed to 'paid'. (Unique Amount and Sandbox only)\r\n3.  **settle** : Simulate Xfers disbursing payment to the destination account. Status will be changed to 'completed'. (Sandbox only)",
      "security": [
        {
          "X-XFERS-APP-API-KEY": []
        }
      ],
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "description": "Transaction id in Xfers",
          "required": true,
          "schema": {
            "type": "string",
            "example": "contract_7abf6bb130d44c02862982ff6022875d"
          }
        }
      ],
      "requestBody": {
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "properties": {
                "event": {
                  "description": "Event name",
                  "type": "string",
                  "example": "cancel",
                  "enum": [
                    "cancel",
                    "receive_payment",
                    "settle"
                  ]
                }
              }
            }
          }
        }
      },
      "responses": {
        "200": {
          "description": "Success",
          "content": {
            "application/json": {
              "schema": {
                "allOf": [
                  {
                    "$ref": "#/base_class/payment/schemas/BaseObject"
                  }
                ]
              },
              "examples": {
                "cancel": {
                  "value": {
                    "id": "contract_73bf83beb9d145ada2c2694a06693b75",
                    "status": "cancelled",
                    "reference_id": "2020-06-11_13:00",
                    "amount": "60189.0",
                    "currency": "idr",
                    "expiration_time": "2020-06-12T13:00:54+07:00",
                    "description": "This is test order",
                    "payment_method": {
                      "type": "unique_amount_bank_transfer",
                      "destination_account_id": "account_7c2b4df6270c4ba487f3786fec398a20",
                      "bank_type": "BRI",
                      "account_holder_name": "INKLUSI KEUANGAN NUSANTARA",
                      "account_no": "000501003330303",
                      "unique_amount": 60189
                    }
                  }
                },
                "receive_payment": {
                  "value": {
                    "id": "contract_73bf83beb9d145ada2c2694a06693b75",
                    "status": "paid",
                    "reference_id": "2020-06-11_13:00",
                    "amount": "60189.0",
                    "currency": "idr",
                    "expiration_time": "2020-06-12T13:00:54+07:00",
                    "description": "This is test order",
                    "payment_method": {
                      "type": "unique_amount_bank_transfer",
                      "destination_account_id": "account_7c2b4df6270c4ba487f3786fec398a20",
                      "bank_type": "BRI",
                      "account_holder_name": "INKLUSI KEUANGAN NUSANTARA",
                      "account_no": "000501003330303",
                      "unique_amount": 60189
                    }
                  }
                },
                "settle": {
                  "value": {
                    "id": "contract_73bf83beb9d145ada2c2694a06693b75",
                    "status": "completed",
                    "reference_id": "2020-06-11_13:00",
                    "amount": "60189.0",
                    "currency": "idr",
                    "expiration_time": "2020-06-12T13:00:54+07:00",
                    "description": "This is test order",
                    "payment_method": {
                      "type": "unique_amount_bank_transfer",
                      "destination_account_id": "account_7c2b4df6270c4ba487f3786fec398a20",
                      "bank_type": "BRI",
                      "account_holder_name": "INKLUSI KEUANGAN NUSANTARA",
                      "account_no": "000501003330303",
                      "unique_amount": 60189
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
