{
  "/v3/payment_gateway/payment_methods/virtual_account_bank_transfers": {
    "post": {
      "tags": [
        "Virtual Account Bank Transfers"
      ],
      "summary": "Virtual Account Bank Transfer",
      "description": "@irfan",
      "security": [
        {
          "X-XFERS-APP-API-KEY": []
        }
      ],
      "requestBody": {
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "allOf": [
                {
                  "$ref": "#/base_class/payment/schemas/RequestBody"
                },
                {
                  "properties": {
                    "payment_method": {
                      "properties": {
                        "bank_type": {
                          "description": "Bank type (@irfan)",
                          "type": "string",
                          "enum": [
                            "BSS",
                            "BRI",
                            "BNI"
                          ],
                          "example": "BSS"
                        }
                      },
                      "required": [
                        "bank_type"
                      ]
                    }
                  }
                }
              ]
            }
          }
        }
      },
      "responses": {
        "200": {
          "description": "Success",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/base_class/payment/schemas/VirtualAccountBankTransfer"
              }
            }
          }
        },
        "4XX": {
          "$ref": "#/components/responses/v3Error:4XX"
        }
      },
      "callbacks": {
        "payment_completed": {
          "$callback_settings.payment_gateway_v3_payment_completed": {
            "post": {
              "summary": "Callback when payment completed",
              "requestBody": {
                "required": true,
                "content": {
                  "application/json": {
                    "schema": {
                      "allOf": [
                        {
                          "$ref": "#/base_class/payment/schemas/VirtualAccountBankTransfer"
                        },
                        {
                          "properties": {
                            "status": {
                              "type": "string",
                              "example": "completed"
                            }
                          }
                        }
                      ]
                    }
                  }
                }
              },
              "responses": {
                "200": {
                  "description": "Your server returns this code if it accepts the callback"
                }
              }
            }
          }
        },
        "payment_expired": {
          "$callback_settings.payment_gateway_v3_payment_completed": {
            "post": {
              "summary": "Callback when payment is expired",
              "requestBody": {
                "required": true,
                "content": {
                  "application/json": {
                    "schema": {
                      "allOf": [
                        {
                          "$ref": "#/base_class/payment/schemas/VirtualAccountBankTransfer"
                        },
                        {
                          "properties": {
                            "status": {
                              "type": "string",
                              "example": "expired"
                            }
                          }
                        }
                      ]
                    }
                  }
                }
              },
              "responses": {
                "200": {
                  "description": "Your server returns this code if it accepts the callback"
                }
              }
            }
          }
        }
      }
    }
  }
}