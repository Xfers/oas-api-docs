{
  "/v3/payment_gateway/payment_methods/unique_amount_bank_transfers": {
    "post": {
      "tags": [
        "Unique Amount Bank Transfers"
      ],
      "summary": "Unique Amount Bank Transfer",
      "description": "With Unique Amount Bank Transfer payment method, you need pass us the amount that you want your customer to pay and we will give you the unique amount. \n\n After your customer successfuly transfer with the unique amount, our system will associate it to your account and we will notify you with the successful callback.",
      "security": [
        {
          "X-XFERS-APP-API-KEY": []
        }
      ],
      "requestBody": {
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "properties": {
                "destination_account_id": {
                  "description": "This is the account ID that will be associated with the payment. You can get your account ID information via our [Get User Info API : /v3/user](../V3/Indonesia#operation/getUserInfo)",
                  "type": "string",
                  "example": "account_3091fa1f6bfddff48148fd32813a3a5b"
                },
                "bank_type": {
                  "description": "Please specify the bank that you want your customer to transfer to. Currently we only support BNI and BRI for this specific payment method.",
                  "type": "string",
                  "enum": [
                    "BNI",
                    "BRI",
                    "MANDIRI"
                  ],
                  "example": "BNI"
                },
                "payment": {
                  "$ref": "#/base_class/payment/schemas/RequestBody"
                }
              },
              "required": [
                "destination_account_id",
                "bank_type",
                "payment"
              ]
            }
          }
        }
      },
      "responses": {
        "200": {
          "description": "Success",
          "content": {
            "application/json": {
              "schema": {
                "allOf": [
                  {
                    "$ref": "#/base_class/payment_method/schemas/UniqueAmountBankTransfer"
                  },
                  {
                    "properties": {
                      "payment": {
                        "$ref": "#/base_class/payment/schemas/BaseObject"
                      }
                    }
                  }
                ]
              }
            }
          },
          "4XX": {
            "$ref": "#/components/responses/v3Error:4XX"
          }
        }
      },
      "callbacks": {
        "payment_processing": {
          "$callback_settings.v3_payment_gateway_payment_processing": {
            "post": {
              "summary": "Callback when payment processing",
              "description": "Login to your Dashboard and setup this callback to get notification of successful payment.",
              "requestBody": {
                "required": true,
                "content": {
                  "application/json": {
                    "schema": {
                      "properties": {
                        "event": {
                          "description": "Event name",
                          "type": "string",
                          "example": "v3_payment_gateway_payment_processing"
                        },
                        "data": {
                          "description": "The fixed virtual account bank transfer reference",
                          "allOf": [
                            {
                              "$ref": "#/base_class/payment/schemas/BaseObject"
                            },
                            {
                              "properties": {
                                "payment_method": {
                                  "$ref": "#/base_class/payment_method/schemas/UniqueAmountBankTransfer"
                                }
                              }
                            }
                          ],
                          "example": {
                            "id": "contract_7abf6bb130d44c02862982ff6022875d",
                            "status": "processing",
                            "reference_id": "ORDER_001",
                            "amount": 10000,
                            "currency": "idr",
                            "expiration_time": "2020-06-12T13:00:54+07:00",
                            "description": "This is test order",
                            "payment_method": {
                              "type": "unique_amount_bank_transfer",
                              "destination_account_id": "account_7c2b4df6270c4ba487f3786fec398a20",
                              "bank_type": "BRI",
                              "account_holder_name": "INKLUSI KEUANGAN NUSANTARA",
                              "account_no": "000501003330303",
                              "unique_amount": 60189
                            }
                          }
                        }
                      }
                    }
                  }
                }
              },
              "responses": {
                "200": {
                  "description": "Your server returns this code if it accepts the callback"
                }
              }
            }
          }
        },
        "payment_expired": {
          "$callback_settings.v3_payment_gateway_payment_expired": {
