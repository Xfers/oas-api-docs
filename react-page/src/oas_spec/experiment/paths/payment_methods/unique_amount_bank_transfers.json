{
  "/v3/payment_gateway/direct_payment/unique_amount_bank_transfers": {
    "post": {
      "tags": [
        "Unique Amount Bank Transfers"
      ],
      "summary": "Unique Amount Bank Transfer",
      "description": "@irfan",
      "security": [
        {
          "X-XFERS-APP-API-KEY": []
        }
      ],
      "requestBody": {
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "properties": {
                "destination_account_id": {
                  "description": "You can get from (@irfan)",
                  "type": "string",
                  "example": "account_3091fa1f6bfddff48148fd32813a3a5b"
                },
                "bank_type": {
                  "description": "Bank type (@irfan)",
                  "type": "string",
                  "enum": [
                    "AAA",
                    "BBB",
                    "CCC"
                  ],
                  "example": "CCC"
                },
                "payment": {
                  "$ref": "#/base_class/payment/schemas/RequestBody"
                }
              },
              "required": [
                "destination_account_id",
                "bank_type",
                "payment"
              ]
            }
          }
        }
      },
      "responses": {
        "200": {
          "description": "Success",
          "content": {
            "application/json": {
              "schema": {
                "allOf": [
                  {
                    "$ref": "#/base_class/payment_method/schemas/UniqueAmountBankTransfer"
                  },
                  {
                    "properties": {
                      "payment": {
                        "$ref": "#/base_class/payment/schemas/BaseObject"
                      }
                    }
                  }
                ]
              }
            }
          },
          "4XX": {
            "$ref": "#/components/responses/v3Error:4XX"
          }
        }
      },
      "callbacks": {
        "payment_completed": {
          "$settings.payment.payment_gateway_v3_payment_completed": {
            "post": {
              "summary": "Callback when the payment completed",
              "description": "Set up on Dashboard @irfan",
              "requestBody": {
                "required": true,
                "content": {
                  "application/json": {
                    "schema": {
                      "properties": {
                        "event": {
                          "description": "Event name",
                          "type": "string",
                          "example": "payment_gateway_v3_payment_completed"
                        },
                        "data": {
                          "type": "object",
                          "$ref": "#/base_class/payment/schemas/UniqueAmountBankTransfer"
                        }
                      }
                    }
                  }
                }
              },
              "responses": {
                "200": {
                  "description": "Your server returns this code if it accepts the callback"
                }
              }
            }
          }
        },
        "payment_expired": {
          "$settings.payment.payment_gateway_v3_payment_expired": {
            "post": {
              "summary": "Callback when the payment expired",
              "description": "Set up on Dashboard @irfan",
              "requestBody": {
                "required": true,
                "content": {
                  "application/json": {
                    "schema": {
                      "properties": {
                        "event": {
                          "description": "Event name",
                          "type": "string",
                          "example": "payment_gateway_v3_payment_expired"
                        },
                        "data": {
                          "type": "object",
                          "$ref": "#/base_class/payment/schemas/UniqueAmountBankTransfer"
                        }
                      }
                    }
                  }
                }
              },
              "responses": {
                "200": {
                  "description": "Your server returns this code if it accepts the callback"
                }
              }
            }
          }
        }
      }
    }
  }
}