{
  "/v3/payment_collector/fixed_virtual_accounts": {
    "post": {
      "tags": [
        "Fixed Virtual Account"
      ],
      "summary": "Fixed Virtual Account registration or retrieval",
      "description": "@Irfan",
      "security": [
        {
          "X-XFERS-APP-API-KEY": []
        }
      ],
      "requestBody": {
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "properties": {
                "destination_account_id": {
                  "description": "You can get from XXXX",
                  "type": "string",
                  "example": "account_3091fa1f6bfddff48148fd32813a3a5b"
                },
                "reference_id": {
                  "description": "Customer id",
                  "type": "string",
                  "example": "CUSTOMER_0001"
                },
                "settings": {
                  "description": "Data for specific payment method",
                  "type": "object",
                  "properties": {
                    "bank_code": {
                      "description": "Bank code",
                      "type": "string",
                      "enum": [
                        "BSS",
                        "BRI",
                        "BNI"
                      ],
                      "example": "BSS"
                    },
                    "display_name": {
                      "description": "Display name on ATM",
                      "type": "string",
                      "example": "My Shop 1"
                    }
                  }
                }
              },
              "required": [
                "destination_account_id",
                "reference_id",
                "settings"
              ]
            }
          }
        }
      },
      "responses": {
        "200": {
          "description": "OK",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/base_class/payment_collector/schemas/FixedVirtualAccount"
              }
            }
          }
        },
        "201": {
          "description": "Created successfully",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/base_class/payment_collector/schemas/FixedVirtualAccount"
              }
            }
          }
        },
        "4XX": {
          "$ref": "#/components/responses/v3Error:4XX"
        }
      },
      "callbacks": {
        "payment_validation": {
          "$settings.payment_collector.fixed_virtual_account.payment_validation_callback_url": {
            "post": {
              "summary": "Callback when we need validation check",
              "requestBody": {
                "required": true,
                "content": {
                  "application/json": {
                    "schema": {
                      "allOf": [
                        {
                          "$ref": "#/base_class/payment_collector/schemas/PaymentCollectorPayment"
                        },
                        {
                          "properties": {
                            "payment_collector": {
                              "$ref": "#/base_class/payment_collector/schemas/FixedVirtualAccount"
                            }
                          }
                        }
                      ]
                    }
                  }
                }
              },
              "responses": {
                "200": {
                  "description": "Your server returns this code if it accepts the callback"
                }
              }
            }
          }
        },
        "payment_received": {
          "$settings.payment_collector.payment_recieved_callback_url": {
            "post": {
              "summary": "Callback when received payment",
              "requestBody": {
                "required": true,
                "content": {
                  "application/json": {
                    "schema": {
                      "allOf": [
                        {
                          "$ref": "#/base_class/payment_collector/schemas/PaymentCollectorPayment"
                        },
                        {
                          "properties": {
                            "payment_collector": {
                              "$ref": "#/base_class/payment_collector/schemas/FixedVirtualAccount"
                            }
                          }
                        }
                      ]
                    }
                  }
                }
              },
              "responses": {
                "200": {
                  "description": "Your server returns this code if it accepts the callback"
                }
              }
            }
          }
        }
      }
    }
  }
}