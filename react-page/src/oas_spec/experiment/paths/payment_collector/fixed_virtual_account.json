{
  "/v3/payment_collector/fixed_virtual_account": {
    "post": {
      "tags": [
        "Fixed Virtual Account"
      ],
      "operationId": "payment_collector/fixed_virtual_account",
      "summary": "Fixed Virtual Account Registration",
      "description": "@Irfan",
      "security": [
        {
          "X-XFERS-APP-API-KEY": []
        }
      ],
      "requestBody": {
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "properties": {
                "destination_account_id": {
                  "description": "You can get from XXXX",
                  "type": "string",
                  "example": "account_3091fa1f6bfddff48148fd32813a3a5b"
                },
                "reference_id": {
                  "description": "Customer id",
                  "type": "string",
                  "example": "CUSTOMER_0001"
                },
                "settings": {
                  "description": "Data for specific payment method",
                  "type": "object",
                  "properties": {
                    "bank_code": {
                      "description": "Bank code",
                      "type": "string",
                      "enum": [
                        "BSS",
                        "BRI",
                        "BNI"
                      ],
                      "example": "BSS"
                    },
                    "expiration_time": {
                      "description": "Time iso8601",
                      "type": "string",
                      "example": "2020-04-29T09:52:37+07:00"
                    },
                    "display_name": {
                      "description": "Display name on ATM",
                      "type": "string",
                      "example": "My Shop 1"
                    },
                    "merchant_callback_url": {
                      "description": "When destination received the payment, we will callback to this URL",
                      "type": "string",
                      "example": "http://myshop.com/payment_callback"
                    }
                  }
                }
              },
              "required": [
                "destination_account_id",
                "reference_id",
                "settings"
              ]
            }
          }
        }
      },
      "responses": {
        "200": {
          "description": "Success",
          "content": {
            "application/json": {
              "example": {
                "transfer_info": {
                  "bank_code": "BSS",
                  "type": "virtual_account",
                  "account_holder_name": "Xfers Pte Ltd.",
                  "account_no": "202000120472913",
                  "amount": 10000.00
                },
                "id": "va_7abf6bb130d44c02862982ff6022875d",
                "object": "VirtualAccountAssigment",
                "status": "active",
                "settings": {
                  "bank_code": "BSS",
                  "expiration_time": "2020-04-29T09:52:37+08:00",
                  "display_name": "My Shop 1",
                  "merchant_callback_url": "http://myshop.com/payment_callback"
                }
              }
            }
          }
        },
        "4XX": {
          "$ref": "#/components/responses/v3Error:4XX"
        }
      },
      "callbacks": {
        "completed": {
          "$request.body.settings.merchant_callback_url": {
            "post": {
              "summary": "Callback when received payment",
              "requestBody": {
                "required": true,
                "content": {
                  "application/json": {
                    "example": {
                      "transfer_info": {
                        "bank_code": "BSS",
                        "type": "virtual_account",
                        "account_holder_name": "Xfers Pte Ltd.",
                        "account_no": "202000120472913",
                        "amount": 10000.00
                      },
                      "id": "contract_7abf6bb130d44c02862982ff6022875d",
                      "object": "BankTransferContract",
                      "status": "completed",
                      "amount": 10000.00,
                      "currency": "idr",
                      "merchant_metadata": {}
                    }
                  }
                }
              },
              "responses": {
                "200": {
                  "description": "Your server returns this code if it accepts the callback"
                }
              }
            }
          }
        }
      }
    }
  }
}