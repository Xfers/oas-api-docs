{
    "/v3/payment_gateway/payment_method/convenience_store_transfers": {
      "post": {
        "tags": [
          "Convenience Store Transfers"
        ],
        "summary": "Top up suing convenience store",
        "description": "@Irfan",
        "security": [
          {
            "X-XFERS-APP-API-KEY": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "allOf": [
                  {
                    "$ref": "#/base_class/cvs_transfers/schemas/RequestBody"
                  },
                  {
                    "properties": {
                      "bank_type": {
                        "description": "Bank type (@irfan)",
                        "type": "string",
                        "enum": [
                          "INDOMARET",
                          "ALFAMART"
                        ],
                        "example": "ALFAMART"
                      }
                    },
                    "required": [
                      "bank_type"
                    ]
                  }
                ]
              }
            }
          }
        },
        "responses": {
            "200": {
              "description": "Success",
              "content": {
                "application/json": {
                  "schema": {
                    "allOf": [
                      {
                        "$ref": "#/base_class/cvs_transfers/schemas/SuccessResponse"
                      }
                    ]
                  }
                }
              }
            },
            "4XX": {
              "$ref": "#/components/responses/v3Error:4XX"
            }
          }
      }
    }
  }