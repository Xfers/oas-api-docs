{
  "/api/v4/accounts": {
    "get": {
      "operationId": "getApiV4AccountsId",
      "summary": "Get Account Info (Coming Soon)",
      "description": "This API displays the account information, including the storage limits.",
      "tags": [
        "cutting_edge"
      ],
      "x-code-samples": [{
        "lang": "Shell",
        "source": "curl --location --request GET \"$BASE_URL/accounts\" \\\r\n  --header \"Content-Type: application/vnd.api+json\" \\\r\n  --header \"Authorization: Bearer $API_TOKEN\""
      }],
      "security": [{
        "v4XfersAuth": []
      }],
      "parameters": [{
        "name": "fields",
        "style": "deepObject",
        "in": "query",
        "description": "Refer to https://jsonapi.org/format/#fetching-sparse-fieldsets",
        "allowReserved": true,
        "required": false,
        "explode": true,
        "schema": {
          "type": "object",
          "example": {
            "accounts": "balance,wallet_id,limitations"
          }
        }
      }],
      "responses": {
        "200": {
          "description": "Success",
          "content": {
            "application/vnd.api+json": {
              "examples": {
                "Limitation excluded": {
                  "summary": "fields[accounts]=balance,currency,wallet_name",
                  "value": {
                    "data": [{
                      "id": "account_48831b3a93e84e9a8dac8a7e11f5659e",
                      "type": "accounts",
                      "attributes": {
                        "balance": "150.00",
                        "currency": "sgd",
                        "wallet_name": "Digital Goods Wallet"
                      }
                    }]
                  }
                },
                "Limitations included": {
                  "summary": "fields[accounts]=limitations",
